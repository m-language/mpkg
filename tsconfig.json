{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "build/js",
        "target": "es2017",
        "declaration": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "test"
    ]
}